{
  "$schema": "../gen/schemas/capabilities.json",
  "identifier": "main-capability",
  "description": "Capability for main application window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:event:allow-listen",
    "core:event:allow-unlisten",
    "core:window:default",

    "dialog:default",
    "dialog:allow-save",
    "dialog:allow-open",

    "fs:default",
    "fs:allow-read-file",
    "fs:allow-write-file",
    "fs:allow-read",
    "fs:read-all"
  ]
}
