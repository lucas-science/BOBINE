{
  "$schema": "../gen/schemas/capabilities.json",
  "identifier": "main-capability",
  "description": "Capability for main application window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:window:allow-on-file-drop",
    "core:window:allow-on-file-drop-hover",
    "core:window:allow-on-file-drop-cancelled",
    "core:event:allow-listen",
    "core:event:allow-unlisten",

    "dialog:default",
    "dialog:allow-save",
    "dialog:allow-open",

    "fs:allow-read-file",
    "fs:allow-write-file",
    "fs:default",
    "fs:allow-read",
    "fs:scope-allow-any"
  ]
}
