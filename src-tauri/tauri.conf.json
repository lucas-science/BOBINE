{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Bobine",
  "version": "0.1.0",
  "identifier": "com.tauri.dev",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      { 
        "title": "Bobine", 
        "width": 960, 
        "height": 700 
      }
    ],
    "security": { 
      "csp": null,
      "capabilities": ["log"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [ 
      "icons/32x32.png", 
      "icons/128x128.png", 
      "icons/icon.icns", 
      "icons/icon.ico" 
    ]
  }
}