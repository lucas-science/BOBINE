{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Bobine",
  "version": "0.1.0",
  "identifier": "com.etic.bobine",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../out"
  },
  "app": {
    "windows": [
      {
        "title": "Bobine",
        "width": 960,
        "height": 700
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        "log",
        "dialog"
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "msi",
      "nsis"
    ],
    "resources": [
      "./python-scripts/**/*",
      "./python-runtime/**/*"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}